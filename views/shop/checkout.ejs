<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/css/cart.css"> 
</head> 

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <ul class="cart-item">
                <% product.forEach(element => { %>
                    <li class="cart-item-list">
                        <p><%=element.productId.title %></p> 
                        <p>Quantity : <%=element.quantity %></p>
                    </li>
                <% }); %>    
            </ul>
            <div >
                <strong class="order">Total Price : <%=total%> </strong>
            </div>
            <div class="order">
                <button id="order-btn" class="btn" >Order NOW</button>
                <script src="https://js.stripe.com/v3/"></script>
                <script>
                  var stripe = Stripe('pk_test_51JlVavSD5rX3MT7W2FIkETAlG8rHgodX1BCAHI0ofFruCAUff0OTYcl03oLC0Ug2cbThoVPfbRLgomwpVup6RKTP00SLMpFRk0')
                  var btn = document.getElementById('order-btn')
                    btn.addEventListener('click',()=>{
                        
                        stripe.redirectToCheckout({
                            sessionId : '<%=sessionId%>', 
                        })
                    })
</script>
            </div>
        </main>
        <%- include('../includes/end.ejs') %>